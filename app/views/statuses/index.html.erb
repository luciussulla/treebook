<div class="page-header">
  <h1>There you go </h1>
</div>

<%= link_to "Posst a new status", new_status_path, class: "btn btn-success" %> 

<% @statuses.each do |status| %> 
  <div class="status">
    <div class="row">
      <div class="col-md-1">
        <%= image_tag status.user.gravatar_url %> 
      </div>
      <div class="col-md-7">
        <strong><%= status.user.full_name %></strong>
        <p><%= status.content %></p>
        <div class="meta">
          <%= link_to "Created " + time_ago_in_words(status.created_at) + " ago" , status %> 
          <% if user_signed_in? && status.user == current_user %> 
            <span class="admin">
            <%= link_to "| Edit", edit_status_path(status) %> | 
            <%= link_to "Delete", status_path(status), method: :delete, data: {confirm: "Are yous sure?"} %>
            </span>
          <% end %> 
        </div>
      </div>
    </div>
  </div>
<% end %> 